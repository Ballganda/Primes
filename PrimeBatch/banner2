      (SET _2=%_2%   #)
      (SET _3=%_3%   #)
      (SET _4=%_4%   #)
      (SET _5=%_5%   #)
      (SET _6=%_6%   #)
      (SET _7=%_7%  ##)
   EXIT /B
   
   REM  Pad digits to -->
   :s_{
      (SET _1=%_1%   # )
      (SET _2=%_2%  #  )
      (SET _3=%_3%  #  )
      (SET _4=%_4% #   )
      (SET _5=%_5%  #  )
      (SET _6=%_6%  #  )
      (SET _7=%_7%   # )
   EXIT /B
   
   REM  Pad digits to -->
   :s_}
      (SET _1=%_1%  #  )
      (SET _2=%_2%   # )
      (SET _3=%_3%   # )
      (SET _4=%_4%    #)
      (SET _5=%_5%   # )
      (SET _6=%_6%   # )
      (SET _7=%_7%  #  )
   EXIT /B
    
   REM  Pad digits to -->
   :s_/
      (SET _1=%_1%    #)
      (SET _2=%_2%     )
